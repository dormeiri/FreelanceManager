<Application x:Class="FreelanceManager.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FreelanceManager.Desktop"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Frame">
            <Setter Property="NavigationUIVisibility" Value="Hidden"></Setter>
        </Style>
        <Style TargetType="TextBox" x:Key="TimePart">
            <Setter Property="Width" Value="50"></Setter>
        </Style>
        <Style TargetType="Label" x:Key="H1">
            <Setter Property="FontSize" Value="24"></Setter>
        </Style>
        <Style TargetType="Label" x:Key="H2">
            <Setter Property="FontSize" Value="18"></Setter>
        </Style>
    </Application.Resources>
</Application>
